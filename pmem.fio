[global]
bs=4k
size=10g
ioengine=libpmem
norandommap
time_based
group_reporting
invalidate=1
disable_lat=1
disable_slat=1
disable_clat=1
clat_percentiles=0

iodepth=1
iodepth_batch=1
thread
numjobs=8
runtime=300

direct=1

sync=1

scramble_buffers=1
numa_cpu_nodes=0,1,2,3,4,5,6,7
cpus_allowed_policy=split

directory=/mnt/pmem/fio

[libpmem-seqwrite]
rw=write
stonewall

[libpmem-seqread]
rw=read
stonewall

