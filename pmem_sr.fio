[global]
bs=4k
size=10g
ioengine=libpmem
norandommap
time_based
group_reporting
invalidate=1
disable_lat=1
disable_slat=1
disable_clat=1
clat_percentiles=0

iodepth=1
iodepth_batch=1
thread
numjobs=4
runtime=600

direct=1

sync=1

scramble_buffers=1
#numa_cpu_nodes=4-7
cpus_allowed_policy=split

directory=/mnt/pmem/fio

[libpmem-seqread]
rw=read
stonewall
